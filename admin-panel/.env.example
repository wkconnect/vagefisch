# =============================================================================
# Vagefisch Admin Panel - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to Git!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (MySQL/MariaDB)
# -----------------------------------------------------------------------------
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://vagefisch:YOUR_DB_PASSWORD@localhost:3306/vagefisch_admin

# -----------------------------------------------------------------------------
# JWT Secret for Session Tokens
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=YOUR_JWT_SECRET_HERE

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Server port
PORT=3000

# Environment mode (development | production)
NODE_ENV=production

# Application URL (for CORS and cookies)
APP_URL=http://localhost:3000

# Cookie security (set to true when behind HTTPS/reverse proxy)
COOKIE_SECURE=false

# Log level (debug | info | warn | error)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Bootstrap Admin Credentials (First Run Only)
# -----------------------------------------------------------------------------
# These are used to create the initial admin user on first startup
# After first run, change password via UI and remove from .env
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_IMMEDIATELY
